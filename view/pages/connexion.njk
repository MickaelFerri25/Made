{% extends "../layouts/global.njk" %}

{% block head %}
  <script src="/assets/js/modules/connexion.js" defer></script>
  <script src="/assets/js/modules/login.js" defer></script>
{% endblock %}

{% block body %}
  {% include "../components/auth-header.njk" %}
  <form action="/connexion" class="formulaire-inscription" id="block-inscription" method="post">
      {{ csrf_input | safe }}
        <div class="email">
            <label for="email">Adresse email</label>
            <input type="email" name="email" id="email" required>
        </div>

        <div class="password">
            <label for="mdp">Mot de passe</label>
            <input type="password" name="password" id="mdp" required>
            {% if error.code == 102 %}
                <p class="error">Email ou mot de passe incorrecte</p>
            {% endif %}
        </div>
        <button type="submit" id="button_form">Connexion</button>
        <a href="../view/pages/connexion.html" class="mdp-oublier">Mot de passe oubli√© ?</a>
  </form>
{% endblock %}
